@model List<MiniProyectoBanking.Core.Application.ViewModels.Productos.ProductoViewModel>

@{
    ViewData["Title"] = "Administrador de productos";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">Productos del cliente</h3>
        <a asp-controller="Producto" asp-action="SaveProducto" asp-route-clienteId="@ViewBag.ClienteId"
           class="btn btn-success">
            + Crear nuevo Producto
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100">

                    <div class="card-body">

                        @if (item.TipoCuenta == "Cuenta de ahorro")
                        {
                            <span class="badge bg-primary mb-2">💰 Cuenta de ahorro</span>
                        }
                        else if (item.TipoCuenta == "Tarjeta de credito")
                        {
                            <span class="badge bg-warning text-dark mb-2">💳 Tarjeta de crédito</span>
                        }
                        else if (item.TipoCuenta == "Prestamo")
                        {
                            <span class="badge bg-danger mb-2">🧾 Préstamo</span>
                        }

                        <h5 class="fw-bold mt-2">Nº @item.NumeroCuenta</h5>

                        <hr />

                        @if (item.TipoCuenta == "Cuenta de ahorro")
                        {
                            <p><strong>Monto actual:</strong> RD$ @item.Monto</p>
                            <p><strong>Deuda:</strong> @(item.Deuda.HasValue ? $"RD$ {item.Deuda}" : "No tiene")</p>
                        }
                        else if (item.TipoCuenta == "Tarjeta de credito")
                        {
                            <p><strong>Límite:</strong> RD$ @item.Limite</p>
                            <p><strong>Deuda actual:</strong> @(item.Deuda.HasValue ? $"RD$ {item.Deuda}" : "No tiene")</p>
                        }
                        else if (item.TipoCuenta == "Prestamo")
                        {
                            <p><strong>Deuda pendiente:</strong> @(item.Deuda.HasValue ? $"RD$ {item.Deuda}" : "No tiene")</p>
                        }

                        <div class="mt-3 d-flex justify-content-end">
                            <form method="post" asp-controller="Producto" asp-action="DeleteProducto">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    Eliminar
                                </button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
